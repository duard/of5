{
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": false,
    "skipDefaultLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@of5/app-shared": ["libs/app-shared/src/index.ts"],
      "@of5/shared/assets": ["libs/shared/assets/src/index.ts"],
      "@of5/shared/styles": ["libs/shared/styles/src/index.ts"],
      "@of5/shared/environments": ["libs/shared/environments/src/index.ts"],
      "@of5/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@of5/shared/core": ["libs/shared/core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "**/*.spec.ts"],
  "include": ["**/*.ts", "./libs/*/src/**/*", "./apps/*/src/**/*"],
  "types": ["node", "cypress", "jest"]
}
